---
import { Icon } from 'astro-icon/components';
---

<div class="socials">
    <ul>
        <li>
            <a href="https://github.com/joseorono/">
                <Icon name="mdi:github" />
            </a>
        </li>
        <li>
            <a href="https://www.linkedin.com/in/joseorono/">
                <Icon name="mdi:linkedin" />
            </a>
        <li>
            <a href="mailto:joseomaker@gmail.com">
                <Icon name="mdi:gmail" />
            </a>
        </li>
    </ul>
</div>

<style>
    .socials ul {
        position: absolute;
        top: 50%;
        left: 50%;
        padding: 0;
        margin: 0;
        transform: translate(-50%, -50%);
        display: flex;
    }

    .socials ul li {
        list-style: none;
        margin: 0 15px;

        /* Center the Icon */
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .socials [data-icon] {
        font-size: 30px;
        line-height: 60px;
        transition: .3s;
        
        color: oklch(var(--sc));
    }

    .socials li:hover [data-icon] {
        color: #fff;
    }

    /* .socials ul li a { */
    .socials ul li {
        position: relative;
        width: 60px;
        height: 60px;
        border-radius: 50%;
        background-color: #F5F6FA;
        text-align: center;
        transition: .6s;
        box-shadow: 0 5px 4px rgba(0, 0, 0, .5);
    }

    .socials ul li:hover {
        transform: translate(0, -10%);
    }

    .socials ul li:nth-child(1):hover {
        background-color: rgba(0, 0, 0, 0.829);
    }

    .socials ul li:nth-child(2):hover {
        background-color: #0077b5;
    }

    .socials ul li:nth-child(3):hover {
        background-color: #0464b8;
    }
</style>